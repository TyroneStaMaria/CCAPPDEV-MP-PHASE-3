<link rel="stylesheet" href="css/account.css" />
<link rel="stylesheet" href="css/forms.css">

{{>account-sidebar}}
<section class="padded container">
  <h1>Add paper</h1>
  <form action="#" method="post">
    <div class="flex form__items">
      <label for="title">Title</label>
      <input type="text" name="title" id="title" class="form__input">
      <div class="authors__list flex">
        <h3>Authors</h3>
        <div id="authorList">
          <div class="author__details flex">
            <div>
              <label for="authorName[]">Author Name</label>
              <br>
              <input type="text" name="authorName[]" class="form__input">
            </div>
            <div>
              <label for="affiliation">Affiliation</label>
              <br>
              <input type="text" name="affiliation" class="form__input">
            </div>
            <button type="button" class="remove-author" onclick="removeAuthor(this)" >
              <span class="material-symbols-outlined">
                delete
              </span>
            </button>
          </div>
        </div>
        <div class="flex">
          
          <button type="button" class="button button--outline" id="addAuthor">
            <span class="material-symbols-outlined">
              add_circle
            </span>
            Add author
          </button>
        </div>
      </div>
      <label for="date">Publication Date</label>
      <input type="date" name="date" id="date" class="form__input">
      <label for="keywords">Keywords</label>
      <input type="text" name="keywords" id="keywords" class="form__input">
      <label for="file">File</label>
      <input type="file" name="file" id="file">
      <label for="abstract">Abstract</label>
      <textarea name="abstract" id="abstract" cols="30" rows="10" class="form__input"></textarea>
      <button class="button" disabled>Submit</button>
    </div>


  </form>
</section>

<script src="/js/add-paper.js"></script>