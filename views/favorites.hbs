<link rel="stylesheet" href="/css/modal.css" />
<link rel="stylesheet" href="/css/favorites.css" />
<link rel="stylesheet" href="/css/forms.css" />
<link rel="stylesheet" href="/css/citation.css" />
{{>overlay}}

<div class="modal">
  <div class="modal__content">
    <p id="modal-citation">Loading...</p>
    <input type="text" name="citation" id="citation" hidden />
    <button
      class="copy-citation button button--outline"
      onclick="copyCitation()"
      id="copyBtn"
    >
      <span class="material-symbols-outlined">
        content_copy
      </span>
      Copy Citation
    </button>
    <div class="flex">
      <button class="button" id="cancelBtn" onclick="closeModal()">
        Close
      </button>
    </div>
  </div>
</div>

<section class="padded">
  <div class="container">
    <h1>My Favorite Articles</h1>

    {{#if favorites}}
      <div class="article__list">
        {{#each favorites}}
          {{>article-item}}
        {{/each}}
      </div>
    {{else}}
      <div class="flex no-favorites">
        <span class="material-symbols-outlined text-dark-2">search_off</span> 
        <h3 class="text-dark-2">
          Uh oh.. you currently don't have any favorite articles. Find articles <a  class="text-primary text-underline" href="/articles/search">here</a>  
        </h3>
      </div>
    {{/if}}
  </div>
</section>

<script src="/js/overlay.js"></script>
<script src="/js/modal.js"></script>
<script src="/js/cite.js"></script>
