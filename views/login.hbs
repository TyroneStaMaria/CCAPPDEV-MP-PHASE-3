<link rel="stylesheet" href="css/forms.css" />

<section class="padded">
  <div class="form__card">
    <h1>Login</h1>
    <form action="/users/login" method="POST">
      <div class="form__items flex">
        <input
          class="form__input"
          type="email"
          id="email"
          name="email"
          placeholder="Email"
        />
        <input
          class="form__input"
          type="password"
          id="password"
          name="password"
          placeholder="Password"
        />

        <button class="button">Login</button>
      </div>
    </form>

  </div>
</section>