<link rel="stylesheet" href="css/forms.css" />

<section class="padded">
  <div class="form__card">
    <h1>Login</h1>
    {{>messages}}
    {{!-- action="/users/login" method="POST" --}}
    <form id="login" > 
      <div class="form__items flex">
        <div class="message error-msg" id="email"></div>
        <input
          class="form__input"
          type="email"
          id="email"
          name="email"
          placeholder="Email"
        />
        <div class="message error-msg" id="password"></div>
        <input
          class="form__input"
          type="password"
          id="password"
          name="password"
          placeholder="Password"
        />

        <button class="button">Login</button>
      </div>
    </form>

  </div>
</section>
<script src="/js/forms.js"></script>
