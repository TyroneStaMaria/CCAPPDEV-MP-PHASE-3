<link rel="stylesheet" href="css/forms.css" />

<section class="padded">
  <div class="form__card">
    <h1>Register</h1>
    <form action="#" method="POST">
      <div class="form__items flex">
        <input
          class="form__input"
          type="email"
          id="email"
          name="email"
          placeholder="Email"
        />
        <input
          class="form__input"
          type="text"
          id="firstName"
          name="firstName"
          placeholder="First Name"
        />
        <input
          class="form__input"
          type="text"
          id="lastName"
          name="firstName"
          placeholder="Last Name"
        />
        <input
          class="form__input"
          type="password"
          id="password"
          name="password"
          placeholder="Password"
        />
        <input
          class="form__input"
          type="password"
          id="confirmPassword"
          name="confirmPassword"
          placeholder="Confirm Password"
        />

        <button class="button">Register</button>
      </div>
    </form>

  </div>
</section>